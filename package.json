{
  "name": "yve-bot",
  "version": "1.20.0",
  "description": "Smart rule-based bot",
  "main": "core.js",
  "module": "core.js",
  "browser": "ui.js",
  "repository": "https://github.com/andersonba/yve-bot",
  "author": "Anderson de Oliveira <andersonba@me.com>",
  "license": "MIT",
  "scripts": {
    "test": "yarn lint && yarn test:coverage",
    "test:strict": "jest",
    "test:coverage": "yarn test:strict --coverage",
    "test:watch": "yarn test:strict --watch",
    "test:bundle": "bundlesize",
    "lint": "tslint 'src/**/*.ts'",
    "clean": "rimraf lib && rimraf compiled",
    "bundleAnalyzer": "BUNDLE_ANALYZER=1 rollup -c rollup.config.ts",
    "prebuild": "yarn clean",
    "build": "rollup -c rollup.config.ts && rimraf compiled",
    "watch": "rollup -c rollup.config.ts -w"
  },
  "devDependencies": {
    "@types/fetch-mock": "^6.0.4",
    "@types/jest": "^23.3.9",
    "@types/lodash-es": "^4.17.1",
    "@types/node": "^10.12.10",
    "bundlesize": "^0.17.0",
    "coveralls": "^3.0.2",
    "faker": "^4.1.0",
    "fetch-mock": "^7.2.5",
    "is-mobile": "^2.0.0",
    "jest": "^23.6.0",
    "lodash-es": "^4.17.11",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.3",
    "rollup-analyzer": "^1.1.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.18.0",
    "rollup-plugin-uglify": "^6.0.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "isomorphic-unfetch": "^3.0.0",
    "promise-queue": "^2.2.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!lodash-es/.*)"
    ],
    "testMatch": [
      "**/__tests__/**/*.(ts|js)"
    ],
    "moduleNameMapper": {
      "^~test/(.*)": "<rootDir>/test/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/**/*.ts",
      "!src/types.ts"
    ]
  },
  "bundlesize": [
    {
      "path": "./lib/core.js",
      "maxSize": "9 kB"
    },
    {
      "path": "./lib/ui.js",
      "maxSize": "4 kB"
    },
    {
      "path": "./lib/web.js",
      "maxSize": "13 kB"
    },
    {
      "path": "./lib/ext/types/StringSearch.js",
      "maxSize": "1.5 kB"
    }
  ]
}
